@model Category
 
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
        <h2 class="text-primary">Delete Category</h2>
        </div>
    </div>
    <div class="mb-3 row p-1">
        <label asp-for="Name" class="p-0">Category Name</label>
        <input asp-for="Name" class="form-control" disabled/>
        
    </div>

    <div class="mb-3 row p-1">
        <label asp-for="DisplayOrder" class="p-0">Display Order</label>
        <input asp-for="DisplayOrder" class="form-control" disabled/>
        
    </div>
    <div class="row pb-3">
        <div class="col-6 col-md-3"> <button type="submit" class="btn btn-danger form-control">Delete</button></div>
        <div class="col-6 col-md-3"> <a asp-controller="Category" asp-action="Index" class="btn btn-secondary form-control">Back to Main</a> </div>
    
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}