@model Product
 
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
        <h2 class="text-primary">Create Product</h2>
        </div>
    </div>
    @*<div asp-validation-summary="All"></div>*@
    <div class="mb-3 row p-1">
        <label asp-for="Title" class="p-0">Product Name</label>
        <input asp-for="Title" class="form-control"/>
    </div>

    <div class="mb-3 row p-1">
        <label asp-for="ISBN" class="p-0">Display Order</label>
        <input asp-for="ISBN" disabled  class="form-control"/>
    </div>

     <div class="mb-3 row p-1">
        <label asp-for="Author" class="p-0">Display Order</label>
        <input asp-for="Author" disabled class="form-control"/>
     </div>   
     <div class="mb-3 row p-1">
        <label asp-for="ListPrice" class="p-0">Display Order</label>
        <input asp-for="ListPrice" disabled class="form-control"/>
        
    </div>
     <div class="mb-3 row p-1">
        <label asp-for="Price" class="p-0">Display Order</label>
        <input asp-for="Price" disabled class="form-control"/>
        
    </div>
     <div class="mb-3 row p-1">
        <label asp-for="Price50" class="p-0">Display Order</label>
        <input asp-for="Price50" disabled class="form-control"/>
       
     <div class="mb-3 row p-1">
        <label asp-for="Price100" class="p-0">Display Order</label>
        <input asp-for="Price100"  disabled class="form-control"/>
  
    </div>
    <div class="row pb-3">
        <div class="col-6 col-md-3"> <button type="submit" class="btn btn-primary form-control">Create</button></div>
        <div class="col-6 col-md-3"> <a asp-controller="Product" asp-action="Index" class="btn btn-secondary form-control">Back to Main</a> </div>
    
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}