@model Product
 
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
        <h2 class="text-primary">Create Product</h2>
        </div>
    </div>
    @*<div asp-validation-summary="All"></div>*@
    <div class="mb-3 row p-1">
        <label asp-for="Title" class="p-0">Title</label>
        <input asp-for="Title" class="form-control"/>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="mb-3 row p-1">
        <label asp-for="Description" class="p-0">Description</label>
        <textarea asp-for="Description" class="form-control border-0 shadow"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="mb-3 row p-1">
        <label asp-for="ISBN" class="p-0">ISBN</label>
        <input asp-for="ISBN"  class="form-control"/>
        <span asp-validation-for="ISBN" class="text-danger"></span>
    </div>

     <div class="mb-3 row p-1">
        <label asp-for="Author" class="p-0">Author</label>
        <input asp-for="Author"  class="form-control"/>
        <span asp-validation-for="Author" class="text-danger"></span>
    </div>
     <div class="mb-3 row p-1">
        <label asp-for="ListPrice" class="p-0">ListPrice</label>
        <input asp-for="ListPrice"  class="form-control"/>
        <span asp-validation-for="ListPrice" class="text-danger"></span>
    </div>
     <div class="mb-3 row p-1">
        <label asp-for="Price" class="p-0">Price</label>
        <input asp-for="Price"  class="form-control"/>
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
     <div class="mb-3 row p-1">
        <label asp-for="Price50" class="p-0">Price50</label>
        <input asp-for="Price50"  class="form-control"/>
        <span asp-validation-for="Price50" class="text-danger"></span>
    </div>
     <div class="mb-3 row p-1">
        <label asp-for="Price100" class="p-0">Price100</label>
        <input asp-for="Price100"  class="form-control"/>
        <span asp-validation-for="Price100" class="text-danger"></span>
    </div>
    @* <div class="mb-3 row p-1">
        <label asp-for="CategoryId" class="p-0"></label>
        <select asp-for="CategoryId" asp-items="ViewBag.CategoryList" class="form-select border-1">
            <option disabled selected >--Select Category--</option>
        </select>
       
    </div>*@

    <div class="row pb-3">
        <div class="col-6 col-md-3"> <button type="submit" class="btn btn-primary form-control">Create</button></div>
        <div class="col-6 col-md-3"> <a asp-controller="Product" asp-action="Index" class="btn btn-secondary form-control">Back to Main</a> </div>
    
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}